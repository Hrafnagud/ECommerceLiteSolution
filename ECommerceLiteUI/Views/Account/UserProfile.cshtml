@using ECommerceLiteUI.Models
@model ProfileViewModel
@{
    ViewBag.Title = "UserProfile";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="row margin-vert-30">
    <div class="col-md-12 col-md-offset-3 col-sm-offset-3">
        <span class="text-danger">@Html.ValidationSummary()</span>
        @using (Html.BeginForm("UserProfile", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            if (ViewBag.Result != null)
            {
                <!-- Default Blockquote -->
                <blockquote>
                    <p>
                        <h4 class="col-md-12"><em>@ViewBag.Result</em></h4> <br />
                    </p>
                </blockquote>
                <!-- End Default Blockquote -->
            }

            else
            {
                <h4 class="col-md-12">You can click update button, after filling the fields you wish to change</h4> <br /> <br />
            }
            <div class="form-group col-md-6 col-md-offset-3">
                @Html.Label("Your Email address")
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" }) <br />
            </div><br />
            <div class="form-group col-md-6 col-md-offset-3">
                @Html.Label("Your name")
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" }) <br />
            </div><br />
            <div class="form-group col-md-6 col-md-offset-3">
                @Html.Label("Your surname")
                @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" }) <br />
            </div><br />
            <div class="col-md-12">
                <button type="submit" value="Guncelle" class="btn btn-lg btn-default pull-right" style="background-color:#D10024; color:white"><b>Update My Profile</b></button>
            </div>

        }
    </div>
</div>