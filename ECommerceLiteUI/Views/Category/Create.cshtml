@model ECommerceLiteEntity.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Create", "Category", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-6 offset-3">


        @*@{ 
            if (TempData["CurrentWindow"] == "base")
            {
                <h4>Add New Category</h4>
            }
            else if (TempData["CurrentWindow"] == "sub")
            {
                <h4>Add Subcategory for @ViewBag.CategoryName</h4>
            }*@



        @{ //Betul's alternative
            if (string.IsNullOrEmpty(ViewBag.CategoryName))
            {
                <h4>Add New Category</h4>
            }
            else
            {
                <h4>Add new Subcategory for <span style="color:red">@ViewBag.CategoryName</span></h4>
            }
        }
        <hr />
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.Label("Category Name")

            @Html.TextBoxFor(model => model.CategoryName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.Label("Category Description")
            @Html.TextBoxFor(model => model.CategoryDescription, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CategoryDescription, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <input type="submit" value="SAVE" class="btn btn-info" style="float:right" />
        </div>
        <div>
            @Html.ActionLink("Listeye Geri Dön", "CategoryList", "Category")
        </div>
    </div>
}


