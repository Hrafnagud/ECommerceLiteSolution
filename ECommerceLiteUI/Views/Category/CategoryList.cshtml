@using ECommerceLiteEntity.Models
@model  List<Category>

@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>All Categories</h2>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Category List</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Category Description</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CategoryName</td>
                            <td>@item.CategoryDescription</td>
                            <td>
                                <a href="/Category/Edit/@item.Id" class="btn btn-sm btn-warning" style="margin-right:5px;">Edit</a>
                                <a href="/Category/Delete/@item.Id" class="btn btn-sm btn-danger" style="margin-right: 5px;">Delete</a>
                                <a href="/Category/ProductsList/@item.Id" class="btn btn-sm btn-info" style="margin-right: 5px;">Sub Categories
                                </a>
                            </td>
                        </tr>
                    }
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <th></th>
                </tr>
            </tfoot>
        </table>
    </div>
    <!-- /.card-body -->
</div>

@section scripts{
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true,
                "autoWidth": false,
            });
        });
    </script>
    } 